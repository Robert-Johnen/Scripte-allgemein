# Pfad erweitern und von Duplikaten bereinigen
add2path() {
  # leere tempor채re Pfadvariable
  local TMPPATH
  # leere Variable f체r neuen Pfad ohne Duplikate
  local NEWPATH
  # Iterator
  local i
  # neuen Pfadteil mit aktuellem Pfad in temp. Var
  TMPPATH="${1}:${PATH}"
  # iteriere 체ber alle Elemente des Pfades ( ":" ersetzt durch " ")
  for i in ${TMPPATH//:/ }
    do 
    # gib eine Warnung, wenn ein Teil des Pfades nicht vorhanden ist
    [ -d $i ] || echo "Das im Pfad enthaltene Verzeichnis $i ist nicht vorhanden" 
    # enth채lt der neue Pfad mit : davor und dahinter irgendwie 
    case ":$NEWPATH:" in              
      # den zu iterierenden Teil mit : davor und dahinter --> tue nichts
      *":$i:"*) : ;;                
      # sonst klebe Iterator hinten an neuen Pfad dran
      *) NEWPATH="${NEWPATH}:${i}";;    
      esac 
    done 
  export PATH="${NEWPATH/:/}"
  return 0
  }

_add2Path() {
  ### Pfad erweitern und von Duplikaten bereinigen
  local lv_tmppath="${1}:${PATH}"          # leere tempor채re Pfadvariable
  local lv_newpath                         # leere Variable f체r neuen Pfad ohne Duplikate
  local lv_i                               # Iterator
  

  for lv_i in ${lv_tmppath//:/ }              # iteriere 체ber alle Elemente des Pfades
    do 
    [ -d $lv_i ] || echo "Das im Pfad enthaltene Verzeichnis $lv_i ist nicht vorhanden" 
    case ":$lv_newpath:" in                # enth채lt der neue Pfad mit : davor und dahinter irgendwie 
      *":$lv_i:"*) : ;;                    # den zu iterierenden Teil mit : davor und dahinter --> tue nichts
      *) lv_newpath="${lv_newpath}:${lv_i}";;    # sonst klebe Iterator hinten an neuen Pfag dran
      esac 
    done 
  export PATH="${lv_newpath/:/}"
  return 0
  }

_rmPath() {
  ### Pfad reduzieren
  local lv_tmppath=":${PATH}:"
  local lv_newpath="${lv_tmppath/:$1:/:}"
  lv_newpath="${lv_newpath#:}"
  export PATH="${lv_newpath%:}"
  }
